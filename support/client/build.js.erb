// RequireJS compiler configuration.

( {

    logLevel: 2, // logger.INFO

    baseUrl: "<%= source %>",
    dir: "<%= destination %>",

    // Neither UglifyJS nor Closure can successfully run the optimizations on all of the files. A
    // separate Rake task will optimize one file at a time.

    optimize: "none", // "closure",

    modules: [<% modules.each do |path| %>
        { name: "<%= path %>" },<% end %>
    ],

    paths: {
        jquery: "jquery-1.10.2.min",
        "jquery-ui": "jquery-ui-1.10.3.custom.min",
        hammer: "jquery.hammer",
    },

    shim: {
        "jquery-ui": {
            deps: ["jquery"],
            exports: "$"
        },
        "jquery-encoder-0.1.0": ["jquery"],
        "hammer": {
            deps: ["jquery"],
            exports: "Hammer"
        }
    }

} )
